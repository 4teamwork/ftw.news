<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="python: 1"
      i18n:domain="ftw.news">

    <div class="portletWrapper">
        <dl class="portlet portletArchiveListing">

            <dt class="portletHeader">
                <span i18n:translate="">
                    Archive
                </span>
            </dt>

            <dd class="portletItem">
                <ul class="years">
                    <li tal:repeat="year view/get_items"
                        tal:attributes="class year/class">

                        <span class="yearnumber"
                              tal:content="year/year_and_count" />

                        <ul tal:attributes="class year/months_expanded">
                            <li tal:repeat="month year/months"
                                tal:attributes="class month/class">
                                <a tal:attributes="href month/url;
                                                   title month/title"
                                   tal:content="month/month_and_count"
                                   i18n:translate=""/>
                            </li>
                        </ul>
                    </li>
                </ul>
            </dd>
        </dl>
    </div>
</html>
